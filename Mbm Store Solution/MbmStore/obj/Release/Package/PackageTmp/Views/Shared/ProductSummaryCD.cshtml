@model MbmStore.Models.MusicCD
@using MbmStore.Models
<div class="row">
    <div class="col-md-2">
        <img src="/Content/Images/@Model.ImageUrl" class="img-responsive" alt="@Model.Title" />
    </div>
    <div class="col-md-4">
        <strong>Title:</strong> @Model.Title<br />
        <strong>Author:</strong> @Model.Artist<br />
        <strong>Price:</strong> @Model.Price<br />
        <strong>Publisher:</strong> @Model.Released <br />
    </div>
    <div class="col-md-2">
        <h4>Tracks in - @Model.Title:</h4>
        <ol>
            @foreach (Track element in Model.Tracks)
            {
                <li>@element.Title</li>
                <li>@element.Composer</li>
                <li>@element.Length</li>
            }
        </ol>
        <br />

        <h4>Total playing time</h4>@Model.GetPlayingTime()
        @using (Html.BeginForm("AddToCart", "Cart"))
        {
            @Html.Hidden("ProductId", Model.ProductId)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Add to cart" />
        }
        <br />
    </div>
    </div>
