<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>

<body>
<div class="container">
    <div class="navbar navbar-inverse">
        <ul class="nav navbar-nav">
            <li role="presentation">@Html.ActionLink("Home", "Index", "Home")</li>
            <li role="presentation">@Html.ActionLink("Customers", "Index", "Customer")</li>
            <li role="presentation">@Html.ActionLink("Catalogue", "Index", "Catalogue")</li>
            <li role="presentation">@Html.ActionLink("Invoice", "Index", "Invoice")</li>
            <li role="presentation">@Html.ActionLink("Cart", "Index", "Cart")</li>
            <li>@Html.Action("Summary", "Cart")</li>
        </ul>
    </div>
    <div class="row panel">
        <div id="categories" class="col-xs-3">
            @Html.Action("Menu", "Nav")
            
            Put something useful here later
        </div>
        <div class="col-xs-9">
            @RenderBody()
        </div>
</div>
</div>
</body>
</html>